#include "S32K144.h" /* include peripheral declarations S32K144 */
#include "math.h"
#define pi 3.14159
#define R 8  //Radio de llanta
#define L 40 //Distancia entre las ruedas


//int short V1 = 100; //duty en cycle, y después poner ecuación
//int short V2 = 100;
int short Vprom;
int short duty_right;
int short duty_left;
int short vel_deseada=100;

int long Wm_right[6]={(0), (pi/4), (-pi/4), (-pi/4) , (pi/4), (0)};
int long Wm_left[6]={(0), (-pi/4), (pi/4), (pi/4) , (-pi/4), (0)};
unsigned char theta = 0;


int ecuaciones(void){

	duty_right = ((2*vprom)+(Theta*L))/(2*R);
	duty_left = ((2*vprom)-(Theta*L))/(2*R);

}

int main(void)
{

ecuaciones();
	return 0;
}
