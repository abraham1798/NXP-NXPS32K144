#include "S32K144.h" /* include peripheral declarations S32K144 */
#include "math.h"
#define pi 3.14159
#define radio_llanta 6

unsigned shot Vright = 5;
unsigned short Vleft = 5;
unsigned short V;

unsigned long angulos[6]={(0), (pi/4), (-pi/4), (-pi/4) , (pi/4), (0)};
unsigned short theta = 0;
unsigned short posx;
unsigned short posy;
unsigned short dtposx;
unsigned short dtposy;

int main(void)
{
V = (((Vright + Vleft)/2)*radio_llanta);

posx = V * (cos(theta));
dtposx = V * (sin(theta));

posy = V * (sin(theta));
dtposy = V * (-cos(theta));



	return 0;
}
